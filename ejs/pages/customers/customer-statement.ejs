                            <div class="col-amount pl-2">
                                <div class="txt-ellipsis">$4.50</div>
                            </div>
                            <div class="col-amount pl-2">
                                <div class="txt-ellipsis">$130.00</div>
                            </div>
                            <div class="col-amount pl-2">
                                <div class="txt-ellipsis">$50.60</div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="account-summary account-amount">
                <div class="details total">
                    <span>Amount Total</span>
                    <span class="price">$18.20</span>
                </div>
                <div class="details total">
                    <span>Paid Total</span>
                    <span class="price">$288.60</span>
                </div>
                <div class="details total">
                    <span>Account Balance</span>
                    <span class="price">$100.00</span>
                </div>
