	<%- include('_sidebar-details', {statementCustomer: 'statementCustomer'}) %>

	<div class="contents-pages modal-container statement-page">
		<div class="title-header">
    		<span class="fs-18">Account Statement for Customer Name</span>
    		<div class="dropdown dropdown-view dropdown-items">
    			<div class="btn-view btn-default just-icon">
                    <%- include ("../../svg/outline/outline-more-verticale.svg") %>
                </div>
                <ul class="dropdown-menu">
                    <li>
